# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Frontend Configuration
# URL of your Next.js frontend application
FRONTEND_URL=http://localhost:3001

# Database Configuration (AWS RDS PostgreSQL)
# Replace these values with your actual AWS RDS credentials
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=true
DB_POOL_MAX=5
DB_POOL_MIN=0

# Session Configuration
# Generate a strong random string for production (e.g., using: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-change-in-production-use-strong-random-string

# Arcjet Security
ARCJET_KEY=your_arcjet_key_here
