# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=debug

# Frontend Configuration
# URL of your Next.js frontend application
FRONTEND_URL=http://localhost:3000

# Database Configuration (Local PostgreSQL in Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=starter_template_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MAX=5
DB_POOL_MIN=0

# Session Configuration
# For development, you can use a simple secret
SESSION_SECRET=dev-session-secret-change-for-production

# Arcjet Security
ARCJET_KEY=your_arcjet_key_here
