# Server Configuration
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# Frontend Configuration
# URL of your production frontend application
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration (AWS RDS PostgreSQL)
# Replace these values with your actual AWS RDS credentials
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_secure_password
DB_SSL=true
DB_POOL_MAX=10
DB_POOL_MIN=2

# Session Configuration
# IMPORTANT: Generate a strong random string for production
# Run: openssl rand -base64 32
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_STRING_FROM_OPENSSL

# Arcjet Security
ARCJET_KEY=your_production_arcjet_key_here
